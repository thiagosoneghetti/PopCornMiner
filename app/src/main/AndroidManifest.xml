<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="popcornminer.thiagosoneghetti.com.br.popcornminer">
    // PermissÃ£o para utilizar a internet
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NovaTransferenciaActivity" />
        <activity android:name=".AddCarteiraActivity" />
        <activity android:name=".CarteiraActivity" />
        <activity android:name=".TransferenciaActivity"></activity>
    </application>

</manifest>